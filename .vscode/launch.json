    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: flight_search",
            "type": "debugpy",
            "request": "launch",
            "program": "flight_search.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "flight_offer_seatmaps MUC-BKK EK BUSINESS",
            "type": "debugpy",
            "request": "launch",
            "program": "flight_offer_seatmaps.py",
            "args": [
                "--date", "2025-12-10",
                "--time", "21:25",
                "--from", "MUC",
                "--to", "BKK",
                "--class", "BUSINESS",
                "--airline", "EK",
                "--force-refresh"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "flight_offer_seatmaps MUC-BKK EK MULTI",
            "type": "debugpy",
            "request": "launch",
            "program": "flight_offer_seatmaps.py",
            "args": [
                "--date", "2025-12-10",
                "--time", "21:25",
                "--from", "MUC",
                "--to", "BKK",
                "--airline", "EK",
                "--force-refresh"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "flight_offer_seatmaps BKK-MUC TG BUSINESS",
            "type": "debugpy",
            "request": "launch",
            "program": "flight_offer_seatmaps.py",
            "args": [
                "--date", "2026-01-26",
                "--time", "00:50",
                "--from", "BKK",
                "--to", "MUC",
                "--class", "BUSINESS",
                "--airline", "TG",
                // "--force-refresh"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "flight_offer_seatmaps BKK-MUC TG MULTI",
            "type": "debugpy",
            "request": "launch",
            "program": "flight_offer_seatmaps.py",
            "args": [
                "--date", "2026-01-26",
                "--time", "00:50",
                "--from", "BKK",
                "--to", "MUC",
                "--airline", "TG",
                // "--force-refresh"
            ],
            "console": "integratedTerminal"
        }
    ]
}
